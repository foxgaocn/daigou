= form_for setup_product(@product) do |f|
  - if @product.errors.any?
    #error_explanation
      %h2= "#{pluralize(@product.errors.count, "error")} prohibited this product from being saved:"
      %ul
        - @product.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :sku
    = f.text_field :sku
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :desc
    = f.text_area :desc
  .field
    = f.label :category
    = f.collection_select :category_id, Category.order(:id), :id, :name
  .field
    = f.label :price
    = f.text_field :price
  .field
    = f.label :stock
    = f.number_field :stock
  .field
    = f.label :active
    = f.check_box :active
  .field
    = f.label :weight
    = f.number_field :weight

  .field
    = f.fields_for :pictures do |pf|
      = pf.label :image 
      - if pf.object.persisted?
        = image_tag pf.object.image.url(:thumb)
        = pf.check_box :_destroy
        = pf.label :_destroy, "Destroy"
      -else
        = pf.file_field :image
  .actions
    = f.submit 'Save'
