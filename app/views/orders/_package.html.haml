.panel.panel-info
  .panel-heading 订单明细
  %table.table.table-striped.text-center
    %th.text-center 产品名
    %th.text-center  单价
    %th.text-center  数量
    - @order.order_items.each do |item|
      %tr
        %td.col-md-8= link_to item.product.name, product_path(item.product_id) 
        %td.col-md-2= "#{item.product.dollar_price} 澳元"
        %td.col-md-2= item.quantity
    %tr
      %td.text-right{colspan:2} 总价
      %td= "#{@order.total_price} 澳元"
        


.panel.panel-info
  .panel-heading 包装明细
  .panel-body
    - @order.packages.each_with_index do |package, index|
      .panel.panel-warning
        .panel-heading
          .row
            .span.col-md-6= "包裹 ##{index + 1}"
            .span.col-md-3.text-right= "重量: #{package.total_weight} kg"
            .span.col-md-3.text-right= "运费: #{package.deliver_cost} 澳元"
        .panel-body
          -package.package_items.each do |item|
            %p= "#{item.product.name} x #{item.quantity}"
          .input-group.address
            %span.input-group-addon 送货地址
            %select.form-control.address-select{"data-package-id" => "#{package.id}"}
              %option{:disabled => "disabled", :selected => "selected", :value => ""} -- 从已有地址选择 --
              - current_user.addresses.each do |address|
                %option{:value => address.id} #{address.street} #{address.name} 
            %span.input-group-btn
              %button.btn.btn-info{"data-target" => "#myModal", "data-toggle" => "modal", :type => "button"} 新地址



  .panel-footer.text-right
    %p= "总运费: #{@order.total_deliver_cost} 澳元"
    
=render 'address'

.row
  .col-md-12
    .alert.alert-success.text-right
      ="订单总价格: #{@order.cost} 澳元" 